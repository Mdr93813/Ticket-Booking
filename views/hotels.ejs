<%- include('./partials/header') %>

<!-- <body> -->
    <%- include('./partials/navbar') %>
    <% hotels.forEach(function(hotel){ %>
    <div class="hotel-indi row">
        <div class="card col-sm-4">
            <div class="pull-left ">
                <img class="card-img-top hotel-img " src="<%= hotel.imgURL %>" alt="<%= hotel.hotelName %> 's image'">
            </div>
            <div class="card-body">
                <h1><%= hotel.hotelName %> </h1>
                <h2><%= hotel.city %></h2>

                <h3><%= hotel.stars %> <i class="fa fa-star" aria-hidden="true"></i>Hotel </h3>
                <p>Rooms Available :<%= hotel.rooms %> </p>
                <div class="contact-details">
                    <i class="fa fa-envelope" aria-hidden="true"></i> <a href="mailto:<%= hotel.email %>" type="email"><%= hotel.email %></a>   <br>
                    <i class="fa fa-phone" aria-hidden="true"></i><a href="tel:<%= hotel.contactNumber %>"><%= hotel.contactNumber  %> </a> <br>
                    <i class="fa fa-money" aria-hidden="true"></i>   <%= hotel.price %> 
                </div>
            <!-- </div> -->
            
        <!-- </div> -->
    
    <% }) %>
    <%- include('./partials/footer.ejs') %>